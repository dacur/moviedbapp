<%= form_for @movie, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :runtime, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :runtime, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :popularity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :popularity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :poster_path, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :poster_path, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                movies_path, :class => 'btn' %>
  </div>
<% end %>
